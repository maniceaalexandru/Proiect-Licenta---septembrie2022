@model TestFinal.ViewModels.LoginViewModel


@{
    ViewBag.Title = "User Login";
}

<style>
    .gradient-custom-2 {
        background: hsla(200, 100%, 46%, 1);

        background: linear-gradient(270deg, hsla(200, 100%, 46%, 1) 0%, hsla(77, 61%, 52%, 1) 100%);

        background: -moz-linear-gradient(270deg, hsla(200, 100%, 46%, 1) 0%, hsla(77, 61%, 52%, 1) 100%);

        background: -webkit-linear-gradient(270deg, hsla(200, 100%, 46%, 1) 0%, hsla(77, 61%, 52%, 1) 100%);
    }
</style>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    @*<img src="~/images/logo.jpg"
                                         style="width: 100px;" alt="logo">*@
                                    <h4 class="mt-1 mb-5 pb-1">LOGIN</h4>
                                </div>

                                <form method="post">
                                    <p>Please login to your account</p>

                                    <div class="form-outline mb-4">
                                         <label asp-for="Email">Email</label>
                                        <input type="email" asp-for="Email" class="form-control"
                                               placeholder="name@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Password" class="form-label">Parola</label>
                                        <input type="password" asp-for="Password" class="form-control"
                                               placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn fa-lg mb-3 text-white" type="submit" style="background-color: #a5cf39;">
                                            Conectare    
                                        </button>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2 mr-2">Nu ai un cont?</p>
                                        <a asp-action="register" asp-controller="account">
                                            <button 
                                            type="button" class="btn text-white" 
                                            style="background-color: #a5cf39;">Creaza cont</button>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">E-Thermal</h4>
                                <p class="small mb-0">
                                    Produsele și serviciile noastre oferă transparența consumului 
                                    individual de energie pentru clienții noștri, astfel încât aceștia 
                                    pot economisi energie, reduce costurile și pot diminua emisiile de CO2.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

