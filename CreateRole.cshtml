@model TestFinal.ViewModels.CreateRoleViewModel
    @{
        //Layout = null;
        ViewBag.Title = "Create Role";
    }

        <style>
            body {
                font-family: 'Poppins', sans-serif;
                background: #fafafa;
            }

            p {
                font-family: 'Poppins', sans-serif;
                font-size: 1.1em;
                font-weight: 300;
                line-height: 1.7em;
                color: #999;
            }

            a, a:hover, a:focus {
                color: inherit;
                text-decoration: none;
                transition: all 0.3s;
            }

            #sidebar {
                /* don't forget to add all the previously mentioned styles here too */
                background: #28A745;
                height: 100%;
                color: #fff;
                transition: all 0.3s;
            }

                #sidebar .sidebar-header {
                    padding: 20px;
                    background: #28A745;
                }

                #sidebar ul.components {
                    padding: 20px 0;
                    border-bottom: 1px solid #47748b;
                }

                #sidebar ul p {
                    color: #fff;
                    padding: 10px;
                }

                #sidebar ul li a {
                    padding: 10px;
                    font-size: 1.1em;
                    display: block;
                }

                    #sidebar ul li a:hover {
                        color: #28A745;
                        background: #fff;
                    }

                #sidebar ul li.active > a, a[aria-expanded="true"] {
                    color: #fff;
                    background: #28A745;
                }

            ul ul a {
                font-size: 0.9em !important;
                padding-left: 30px !important;
                background: #28A745;
            }
        </style>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="RoleName">Nume rol</label>
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn text-white" style="background-color:#A5CF39;">Creaza rol</button>
                    </form>
                </div>
            </div>
        </div>
