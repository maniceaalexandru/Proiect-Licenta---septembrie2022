@using Microsoft.AspNetCore.Identity
@model IEnumerable<Subcategory>

@{ ViewData["Title"] = " - Subcategorie"; }


@if (Model.Any())
{
    int i = 1;
<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <h2 class="" style="margin-top:20px;">

            <br>
            Administreaza subcategorii
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-black">
                 Lista Subcategorii
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                </p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">ID categorie</th>
                            <th scope="col">Nume categorie</th>
                            <th scope="col">Subcategorie</th>
                            <th scope="col">Actiuni</th>
                        </tr>
                    </thead>
                    @foreach (var option in Model)
                    {
                    <tbody>
                        <tr>
                            <th scope="row">@i</th>
                            <td>@option.SubCategorieID</td>
                            <td>@option.Nume</td>
                            <td>@option.Categories.CategoryName</td>
                            <td>
                
                                <a class="btn btn-danger" asp-action="DeleteSubCategory" asp-controller="subcategory" asp-route-id="@option.SubCategorieID">
                                    <i class="fa-solid fa-trash"></i>
                                    Sterge
                                </a>
                        </tr>
                    </tbody>i++;
                    }
                </table>
            </div>
        </div>
        <div class="card mb-3">
            
            <div class="card-body"> 
                <a class="btn text-white" style="background-color: #A5CF39;" asp-action="CreateSubCategory" asp-controller="subcategory">
                    <i class="fas fa-user-plus"></i>
                    Creaza subcategorie noua
                </a>
            </div>
        </div>
        <hr>
    </div>
</div> }
            else
            {
<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
          
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                    There are currently no subcategories
                </p>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">SubCategory Id</th>
                            <th scope="col">SubCategory Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="far fa-question-circle"></i> Add New Subcategory
            </div>
            <div class="card-body">
               
                <a class="btn text-white" style="background-color: #A5CF39;" asp-action="CreateSubCategory" asp-controller="subcategory">
                    <i class="fas fa-user-plus"></i>
                    Creaza subcategorie noua
                </a>
            </div>
        </div>
        <hr>
    </div>
</div>}