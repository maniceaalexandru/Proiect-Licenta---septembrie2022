@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Thermal</title>
   
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*<link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />*@
    <script src="https://kit.fontawesome.com/e64334a162.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <style>
        /* Modify the background color */
         
        .navbar-custom {
            background-color: #009de9;
        }
        /* Modify brand and text color */
         
        .navbar-custom .navbar-brand,
        .navbar-custom .navbar-text {
            color: green;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand active text-white" asp-area="" asp-controller="Home" asp-action="Index">E-Thermal</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarsExampleDefault">
                    <ul class="navbar-nav m-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="subscription" asp-action="Index">Abonament</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="offer" asp-action="Index">Servicii si pachete</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Contact" asp-action="CreateContact">Contact</a>
                        </li>*@
                        @*<li class="nav-item">
                            <a class="nav-link " asp-area="#" asp-controller="Images" asp-action="Index">Gallery</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="#" asp-controller="Product" asp-action="ListProducts">Produse</a>
                        </li>

                    </ul>

                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {   <li class="nav-item dropdown text-center">
                            <a class="btn dropdown-toggle text-white" style="margin-right:10px; background-color: #a5cf39;" data-toggle="dropdown"
                               aria-expanded="false">
                                Activitati
                            </a>
                            <!-- Dropdown menu -->
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-controller="category" asp-action="createcategory">Adauga Categorie</a></li>
                                <li><a class="dropdown-item" asp-controller="category" asp-action="categorylist">Lista Categorii</a></li>
                                <li><a class="dropdown-item" asp-controller="subcategory" asp-action="createsubcategory">Adauga Subcategorie</a></li>
                                <li><a class="dropdown-item" asp-controller="subcategory" asp-action="subcategorylist">Lista Subcategorii</a></li>
                                <li><a class="dropdown-item" asp-controller="product" asp-action="createproduct">Adauga Produs</a></li>
                                <li><a class="dropdown-item" asp-controller="product" asp-action="listproduct">Lista Produse</a></li>
                                <li><a class="dropdown-item" asp-controller="order" asp-action="list">Lista Comenzi</a></li>
                                <li><a class="dropdown-item" asp-controller="administration" asp-action="listroles">Roluri</a></li>
                            </ul>
                        </li>

                        <a class="btn ml-2 text-white" style="background-color: #a5cf39;" asp-action="Profile" asp-controller="account">
                            Profil
                        </a>
                        @*<a class="btn ml-2" style="background-color: #a5cf39;" asp-controller="administration" asp-action="listroles">
                            Roluri
                        </a>*@
                        <a class="btn ml-2 text-white" style="background-color: #a5cf39;" asp-controller="contact" asp-action="contactList">
                            Mesaje Contact
                        </a>
                        <form method="post" asp-controller="account" asp-action="logout">
                            <button type="submit" class="btn btn-sm ml-3 text-white" style="background-color: #a5cf39;">
                                Logout @User.Identity.Name
                            </button>
                        </form>
                    }
                    else @if (signInManager.IsSignedIn(User) && User.IsInRole("User"))
                    {
                    <li class="nav-item dropdown text-center text-white">
                        <a class="btn dropdown-toggle text-white" style="margin-right:10px; background-color: #a5cf39;" data-toggle="dropdown"
                           aria-expanded="false">
                            Activitati
                        </a>
                        <!-- Dropdown menu -->
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" asp-controller="order" asp-action="listorder">Comenzi</a></li>
                            <li><a class="dropdown-item" asp-controller="shoppingcart" asp-action="index">Cos</a></li>
                        </ul>
                    </li>

                    <a asp-action="CreateContact" asp-controller="Contact" class="btn ml-3 text-white" style="background-color: #a5cf39;">
                        <i class="fa fa-envelope"></i> Contact
                    </a>    
                    <a asp-action="Profile" asp-controller="account" class="btn ml-3 text-white" style="background-color: #a5cf39;">
                        <i class="fa fa-user" aria-hidden="true"></i> Profil
                    </a>


                    <form method="post" asp-controller="account" asp-action="logout">
                        <button type="submit"
                        class="btn btn-sm ml-3 text-white" style="background-color: #a5cf39;">
                            Logout @User.Identity.Name
                        </button>
                    </form>


                    }
                    else @if (signInManager.IsSignedIn(User))
                    {
                    <!-- Example single danger button -->
                    <a asp-action="CreateContact" asp-controller="Contact" class="btn btn-primary btn-sm ml-3 text-white">
                       <i class="fa fa-envelope"></i> Contact
                    </a>  
                    <a asp-action="Profile" asp-controller="account" class="btn ml-3 text-white" style="background-color: #a5cf39;">
                        <i class="fa fa-user" aria-hidden="true"></i> Contul tau
                    </a>

                    <form method="post" asp-controller="account" asp-action="logout">
                       <button type="submit"
                       class="btn btn-sm ml-3 text-white" style="background-color: #a5cf39;">
                                Logout @User.Identity.Name
                       </button>
                    </form>

                    }
                    else
                    {
                        <a asp-action="CreateContact" asp-controller="Contact" class="btn ml-3 text-white" style="background-color: #a5cf39;">
                            <i class="fa fa-envelope"></i> Contact
                        </a>
                        <a asp-action="register" asp-controller="account" class="btn ml-3 text-white" style="background-color: #a5cf39;">
                            <i class="fa fa-user" aria-hidden="true"></i> Register
                        </a>
                        <a asp-action="login" asp-controller="account" class="btn ml-3 text-white" style="background-color: #a5cf39;">
                            <i class="fa fa-user" aria-hidden="true"></i> Login
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" style="margin-top:100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start text-white" style="background-color: #1c2331">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-between p-4"
                 style="background-color: #a5cf39">
            <!-- Left -->
            <div class="me-5">
                <span>Conectați-vă cu noi pe rețelele sociale:</span>
            </div>
            <!-- Left -->
            <!-- Right -->
            <div>
                <a href="" class="text-white me-4">
                    <i class="fa-brands fa-facebook"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fa fa-twitter"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fa fa-google"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fa fa-instagram"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fa fa-linkedin"></i>
                </a>
                <a href="" class="text-white me-4">
                    <i class="fa fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold">E-Thermal</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #a5cf39; height: 2px" />
                        <p>
                            Produsele și serviciile noastre oferă transparența consumului individual 
                            de energie pentru clienții noștri, astfel încât aceștia pot economisi energie, 
                            reduce costurile și pot diminua emisiile de CO2.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Produse</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #a5cf39; height: 2px" />
                        <p>
                            <a class="text-white" asp-controller="Product" asp-action="ListProducts">Lista produse</a>
                        </p>
                        
                        <p>
                            <a class="text-white" asp-controller="offer" asp-action="Index">Servicii si pachete</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Linkuri utile</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #a5cf39; height: 2px" />
                        <p>
                            <a class="text-white" asp-action="Profile" asp-controller="account">Contul tau</a>
                        </p>
                        <p>
                            <a class="text-white" asp-controller="shoppingcart" asp-action="index">Cosul tau</a>
                        </p>
                        <p>
                            <a class="text-white" asp-controller="order" asp-action="listorder">Comenzile tale</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Contact</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #a5cf39; height: 2px" />
                        <p><i class="fa fa-home mr-3"></i> New York, NY 10012, US</p>
                        <p><i class="fa fa-envelope mr-3"></i> info@example.com</p>
                        <p><i class="fa fa-phone mr-3"></i> + 01 234 567 88</p>
                        <p><i class="fa fa-print mr-3"></i> + 01 234 567 89</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-3"
             style="background-color: rgba(0, 0, 0, 0.2)">
            © 2020 Copyright
            <a class="text-white" href="https://mdbootstrap.com/"></a>
        </div>
        <!-- Copyright -->
    </footer>


    <script type="text/javascript" src="~/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/popper.js/cjs/popper.min.js"></script>

    <script src="~/js/owl.carousel.min.js"></script>
   


    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
